body {
  background-image: url("img/images.png");
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  background-size: cover;
  opacity: 0.9;
  /* cursor: none; hide cursor */
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: #000;
}

@font-face {
  font-family: digital7;
  src: url(digital-7.woff);
}

.header {
  background-color: #ccc;
  padding: 10px 40px;
  text-align: center;
  opacity: 0.7;
}

.isi {
  padding: 200px;
  text-align: center;
  font-size: 35px;
}

.footer {
  background-color: #hhh;
  padding: 0px;
  text-align: center;
  position: fixed;
  bottom: 100px;
  width: 100%;
}

.jam {
  font-size: 35px;
  font-family: digital7;
  text-shadow: 0 0 20px #ffff00;
  letter-spacing: 5px;
  color: #000;
  user-select: none;
  opacity: 1;
}

.hari {
  font-size: 25px;
  text-shadow: 0 0 8px #ffff00;
  color: #000;
  user-select: none;
}

.tgl {
  font-size: 25px;
  text-shadow: 0 0 8px #ffff00;
  color: #000;
  user-select: none;
}

.tgl2 {
  font-size: 40px;
  text-shadow: 0 0 8px #ffff00;
  color: #000;
  user-select: none;
}

.col-sm {
  box-shadow: 0 34px 28px 0 rgba(0, 0, 0, 0.2),
    0 26px 10px 0 rgba(0, 0, 0, 0.19);
  border-radius: 50px;
  background-color: #f8f9fa;
}

<!-- Modal -- > .modal-content {
  background-color: #0f0;
  color: white;
}
.modal-header {
  background-color: #0f0;
  color: white;
  text-align: center;
  font-size: 30px;
}
